Logged in as <%= current_user.email %> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
<div class="new-header">
  <h1 class="new-text">Edit Review</h1>
</div>
<hr class="hr-thick">
<hr class="hr-thin">


<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :content_body %>
  <%= f.text_area :content_body %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <p><%= f.submit %></p>
<% end %>
