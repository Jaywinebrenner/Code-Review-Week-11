<%= link_to "Home", '/' %> |
Logged in as <%= current_user.email %> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
<div class="new-header">
  <h1 class="new-text">Let's Investigate a product and the product reviews</h1>
</div>
<hr class="hr-thick">
<hr class="hr-thin">

<h1><%= @product.name %></h1>
<h3><%= @product.cost %> $ USD + shipping and handling</h3>
<h3>Ships from: <%= @product.country_of_origin %></h3>

<% if @product.reviews.any? %>
<h4>Here are the reviews for this product:</h4>
<hr>

<% @product.reviews.each do |review| %>
<ul>
  <li>
    <%= link_to review.author, product_review_path(@product, review) %>
  </li>
</ul>
<% end %>
<% else %>
<p>No reviews are listed for this product.</p>
<% end %>
<hr>
<p><%= link_to "Add a review", new_product_review_path(@product) %></p>
<p> | </p>

<% if current_user.admin  == true%>
<p><%= link_to "Edit Product", edit_product_path(@product) %></p>
<p> | </p>
<p><%= link_to "Delete product", product_path(@product),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %></p>
  <p> | </p>

  <% end %>


  <p><%= link_to "Return to products", products_path %></p>

